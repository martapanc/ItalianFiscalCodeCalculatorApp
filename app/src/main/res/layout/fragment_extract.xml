<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.main.extract.ExtractFragment">

    <TextView
        android:id="@+id/fiscalCodeInputLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/extract_prompt"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/fiscalCodeInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fiscalCodeInputLabel"
        android:layout_centerHorizontal="true"
        android:hint="@string/sample_fiscal_code"
        android:textAllCaps="true"
        android:inputType="text"
        android:textAlignment="center"
        android:autofillHints="" />

    <Button
        android:id="@+id/extract_data_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fiscalCodeInputEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/button"
        android:textColor="@color/white"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="@string/extract_data_button" />

    <ImageButton
        android:id="@+id/extract_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fiscalCodeInputEditText"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/extract_data_button"
        android:src="@drawable/ic_replay_24px"
        android:contentDescription="@string/reset_button" />

    <TextView
        android:id="@+id/first_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/extract_data_button"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:ems="7"
        android:text="@string/first_name_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/first_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extract_data_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:hint="@string/name_code_hint"
        android:layout_toEndOf="@id/first_name_label" />

    <TextView
        android:id="@+id/last_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_name_label"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:ems="7"
        android:text="@string/last_name_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/last_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_name_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:hint="@string/last_name_code_example"
        android:layout_toEndOf="@id/last_name_label" />

    <TextView
        android:id="@+id/gender_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/last_name_label"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:ems="7"
        android:text="@string/gender_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gender_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_name_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:hint="@string/gender_example"
        android:layout_toEndOf="@id/gender_label" />

    <TextView
        android:id="@+id/dob_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender_label"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:ems="7"
        android:text="@string/dob_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dob_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:hint="@string/dob_example"
        android:layout_toEndOf="@id/dob_label" />

    <TextView
        android:id="@+id/pob_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dob_label"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:ems="7"
        android:text="@string/pob_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pob_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dob_text"
        android:layout_alignParentEnd="true"
        android:hint="@string/placeOfBirth_hint_2"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/pob_label" />

</RelativeLayout>